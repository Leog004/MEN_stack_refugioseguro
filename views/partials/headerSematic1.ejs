
<!DOCTYPE html>
<html>
<head>
  <!-- Standard Meta -->
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <meta name="description" content="Refugio Seguro Sign Up." />
  <meta name="google-site-verification" content="GgdmQ1GaZBtxXPvZ87L9eoruuB1FLyR67CPJdWxCBK0" />


  <!-- Site Properties -->
  <title>Refugio Seguro Sign Up</title>
  <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.css">
  <link rel="stylesheet" href="/stylesheets/landing.css">
  <link rel="stylesheet" href="/stylesheets/sweetalert2.min.css">
  <script src="/stylesheets/sweetalert2.min.js"></script>
    

  <style type="text/css">

    .hidden.menu {
      display: none;
    }

    .masthead.segment {
      min-height: 756px;
      padding: 1em 0em;
    }
    .masthead .logo.item img {
      margin-right: 1em;
    }
    .masthead .ui.menu .ui.button {
      margin-left: 0.5em;
    }
    .masthead h1.ui.header {
      margin-top: 3em;
      margin-bottom: 0em;
      font-size: 4em;
      font-weight: normal;
    }
    .masthead h2 {
      font-size: 1.7em;
      font-weight: normal;
    }

    .ui.vertical.stripe {
      padding: 8em 0em;
    }
    .ui.vertical.stripe h3 {
      font-size: 2em;
    }
    .ui.vertical.stripe .button + h3,
    .ui.vertical.stripe p + h3 {
      margin-top: 3em;
    }
    .ui.vertical.stripe .floated.image {
      clear: both;
    }
    .ui.vertical.stripe p {
      font-size: 1.33em;
    }
    .ui.vertical.stripe .horizontal.divider {
      margin: 3em 0em;
    }

    .quote.stripe.segment {
      padding: 0em;
    }
    .quote.stripe.segment .grid .column {
      padding-top: 5em;
      padding-bottom: 5em;
    }

    .footer.segment {
      padding: 5em 0em;
    }

    .secondary.pointing.menu .toc.item {
      display: visibility ;
    }

    @media only screen and (max-width: 700px) {
      .ui.fixed.menu {
        display: none !important;
      }
      .secondary.pointing.menu .item,
      .secondary.pointing.menu .menu {
        display: none;
      }
      .secondary.pointing.menu .toc.item {
        display: block;
      }
      .masthead.segment {
        min-height: 350px;
      }
      .masthead h1.ui.header {
        font-size: 2em;
        margin-top: 1.5em;
      }
      .masthead h2 {
        margin-top: 0.5em;
        font-size: 1.5em;
      }
      .ui.menu:not(.vertical) .item > .button{
        font-size:10px;
      }
    }


  </style>
  
 

  <script
  src="https://code.jquery.com/jquery-2.2.4.min.js"
  integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
  crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.js"></script>
  <script>
  $(document)
    .ready(function() {

      // fix menu when passed
      $('.masthead')
        .visibility({
          once: false,
          onBottomPassed: function() {
            $('.fixed.menu').transition('fade in');
          },
          onBottomPassedReverse: function() {
            $('.fixed.menu').transition('fade out');
          }
        })
      ;

      // create sidebar and attach to menu open
      $('.ui.sidebar')
        .sidebar('attach events', '.toc.item')
      ;

    })
  ;
  </script>
</head>
<body>

<!-- Following Menu -->
<div class="ui large top fixed hidden menu">
  <div class="ui container">
        <div class="item">
        <a href="/" class="ui inverted white button" style="color:black;">Home</a>
      </div>
      <div class="item">
        <a href="/Contact"  class="ui inverted white button" style="color:black;">CONTACTANOS</a>
      </div>
      <div class="item">
        <a href="/blogs" class="ui inverted white button" style="color:black;">Blogs</a>
    </div>
    <div class="right menu">
<%if(!currentUser){%>
      <div class="item">
        <a href="/login" class="ui mini teal button">Log in</a>
      </div>
      <div class="item">
        <a href="/register" class="ui mini primary button">Sign Up</a>
      </div>
<%  }else{ %>
      <div class="item">
          <a href="#" class="ui inverted mini blue button">Welcome <%=currentUser.username%></a>
      </div>
      <div class="item">
          <a href="/logout" class="ui mini red button">Log Out</a>
      </div>
<% } %>
    </div>
  </div>
</div>

<!-- Sidebar Menu -->
<div class="ui vertical inverted sidebar menu">
  <a href="/" class="active item">Home</a>
  <a href="/contact" class="item">Contactanos</a>
  <a href="/blogs"  class="item">Blogs</a>
  <a href="/Events" class="item">Events</a>
</div>


<!-- Page Contents -->
<div class="pusher">
  <div class="ui vertical masthead center aligned segment" style="z-index:2;">

    <div class="ui container">
      <div class="ui large secondary inverted pointing menu" style="border:0px;">
        <a class="toc item">
          <i class="stop circle outline icon" style="color:black; font-size:34px;"></i>
        </a>
        <div class="right item">
          <%if(!currentUser){%>
          <a href="/login" class="ui mini teal button">Log in</a>
          <a href="/register" class="ui mini blue button">Sign Up</a>
           <%  }else{ %>
          <a href="#" class="ui inverted mini blue button">Welcome <%=currentUser.username%></a>
          <a href="/logout" class="ui red mini button">Log Out</a>
          <% } %>
        </div>
      </div>
    </div>
<div class="ui text container">
    <% if(error && error.length > 0){ %>

       <script>
Swal({
  position: 'top-end',
  type: 'error',
  html: '<p><strong><%=error%></strong></p><br><p>Please Try Again</p>',
  showConfirmButton: false,
  timer: 5500
})
 </script>  

    <% } %>
    
    <% if(success && success.length > 0){ %>
     <script>
Swal({
  position: 'top-end',
  type: 'success',
  title: '<%=success%>',
  padding: '1em',
  showConfirmButton: false,
  timer: 4500
})
 </script>   


     <% } %>
     
   <%   if(currentUser && currentUser.isAdmin){ %>
   
     <script>
Swal({
  position: 'top-end',
  type: 'success',
  title: 'Welcome, Your an admin!',
  padding: '1em',
  showConfirmButton: false,
  timer: 1500
})
 </script>  
   
   
   <% } %>
     
     
</div>

 <script>
    $('.message .close')
  .on('click', function() {
    $(this)
      .closest('.message')
      .transition('fade')
    ;
  });
  </script>
  
  
  
