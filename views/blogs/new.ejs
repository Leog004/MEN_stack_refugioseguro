
<% include ../partials/header %>
  <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/bower_components/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" />
<div class="container">
    <div class="row">
           <h1 style="text-align:center;">Create a New Blog</h1>
           <div style="width:80%; margin: 20px auto;">
                <form action="/blogs" method="POST">
                    <div class="form-group col-xs-6">
                        <input class="form-control" type ="text" placeholder="Title" name="title">
                    </div>                    
                    <div class="form-group col-xs-6">
                        <input class="form-control" type ="text" placeholder="subTitle" name="subTitle">
                    </div>
                    <div class="form-group col-xs-8">
                        <input class="form-control" type ="text" placeholder="image url" name="image">
                    </div>
                    <div class="form-group col-xs-4">
                            <div class="">
                                  <select class="form-control" name="category">
                                    <option name="Topic 1" value="Topic 1">Choose Category</option>
                                    <option name="testimonial" value="testimonial">testimonial</option>
                                    <option name="event" value="event">event</option>
                                    <option name="Prayers" value="Prayers">Prayers</option>
                                    <option name="Other" value="Other">Other</option>
                                  </select>
                            </div>
                  </div>
                    <div class="form-group">
                        <textarea class="form-control" rows="8" id="boldParagraph" placeholder="boldParagraph" name="boldParagraph"></textarea>
                    </div>                    
                    <div class="form-group">
                        <textarea class="form-control" rows="8" id="paragraph1" placeholder="paragraph1" name="paragraph1"></textarea>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" rows="8" id="paragraph2" placeholder="paragraph2" name="paragraph2"></textarea>
                    </div>
                    <div class="form-group col-xs-6">
                        <input class="form-control" type ="text" placeholder="qoute" name="qoute">
                    </div>                    
                    <div class="form-group col-xs-6">
                        <input class="form-control" type ="text" placeholder="from who" name="qouteAuthor">
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" rows="8" id="paragraph2" placeholder="paragraph3" name="paragraph3"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>


                </form>
                                    <a href="/">Back</a> 
           </div>
           
    </div>
</div>

<% include ../partials/footer %>
