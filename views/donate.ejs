     <script>

        document.getElementById("offering_type").value = "Offering";
        
        function selection(val){

          var off = document.getElementById("Offering");
          var tit = document.getElementById("Tithe");
          var pro = document.getElementById("Promise");
          var oth = document.getElementById("Other");

          if(val == "Offering"){
            tit.style.backgroundColor = '#507281';
            pro.style.backgroundColor = '#507281';
            oth.style.backgroundColor = '#507281';
            off.style.backgroundColor = '#28A745';
          }

          if(val == "Tithe"){
            off.style.backgroundColor = '#507281';
            pro.style.backgroundColor = '#507281';
            oth.style.backgroundColor = '#507281';
            tit.style.backgroundColor = '#28A745';
          }

          if(val == "Promise"){
            tit.style.backgroundColor = '#507281';
            off.style.backgroundColor = '#507281';
            oth.style.backgroundColor = '#507281';
            pro.style.backgroundColor = '#28A745';
          }

          if(val == "Other"){
            tit.style.backgroundColor = '#507281';
            off.style.backgroundColor = '#507281';
            pro.style.backgroundColor = '#507281';
            oth.style.backgroundColor = '#28A745';
          }
          


         var a = document.getElementById("offering_type");
         a.value = val;
       }

