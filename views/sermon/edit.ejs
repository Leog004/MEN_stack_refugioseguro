<% include ../partials/header %>
  <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="/bower_components/eonasdan-bootstrap-datetimepicker/build/css/bootstrap-datetimepicker.min.css" />
<div class="container">
    <div class="row">
           <h1 style="text-align:center;">Edit Sermon</h1>
           <div style="width:80%; margin: 20px auto;">
                <form action="/sermon/<%=sermon._id%>?_method=PUT" method="POST">
                    <div class="form-group col-xs-6">
                        <input class="form-control" type ="text" placeholder="Videourl" value="<%=sermon.Videourl%>" name="sermon[Videourl]">
                    </div>
                    <div class="form-group col-xs-3">
                        <input class="form-control" type ="text" placeholder="Title" value="<%=sermon.title%>" name="sermon[title]">
                    </div> 
                    <div class="form-group col-xs-3">
                        <input class="form-control" type ="text" placeholder="Preaching" value="<%=sermon.preaching%>" name="sermon[preaching]">
                    </div> 
                    <div class="form-group">
                        <textarea class="form-control" rows="4" id="qoute" placeholder="qoute" name="sermon[qoute]"><%=sermon.qoute%></textarea>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" rows="8" id="paragraph" placeholder="paragraph" name="sermon[paragraph]"><%=sermon.paragraph%></textarea>
                    </div>    
                    <div class="form-group">
                        <button type="submit" class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>


                </form>
                                    <a href="/">Back</a> 
           </div>
           
    </div>
</div>

<% include ../partials/footer %>